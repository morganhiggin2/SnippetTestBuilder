{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Snippet Test Builder",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$RESOURCE/*"],
        "all": true
      },
      "http": {
        "all": true,
        "request": true
      }
    },
    "bundle": {
      "active": false,
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/128x128@2x.png",
        "icons/128x128.png",
        "icons/32x32.png"
      ],
      "resources": [],
      "identifier": "snippet.test.builder",
      "targets": ["deb", "dmg"]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "SnippetTestBuilder",
        "width": 800,
        "height": 600,
        "fileDropEnabled": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png"
    }
  }
}
